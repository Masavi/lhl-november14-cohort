<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Pets</h1>

  <nav>
    <a href="/pets/add">Add a Pet</a>
  </nav>

  <!-- Unordered List -->
  <ul>

  <% for (const pet of database) { %>
    <li>
      My name is <%= pet.name %>, i am a <%= pet.type %> and i am <%= pet.age %> years old!
      <a href="/pets/<%= pet.id %>">Show</a>
      <a href="/pets/<%= pet.id %>/edit">Edit</a>

      <form method="POST" action="/pets/<%= pet.id %>/delete">
        <button type="submit">Delete</button>
      </form>
      
    </li>
  <% } %>

  </ul>

</body>
</html>